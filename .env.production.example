# Production Environment Variables
# Copy this file to .env.production and fill in real values

NODE_ENV=production

# API Configuration
EXPO_PUBLIC_API_URL=https://api.gnidoc.xyz
PORT=8787

# Database (Replace with your production database)
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"
PG_SSL=require

# Security Keys (MUST CHANGE IN PRODUCTION)
# Generate with: openssl rand -base64 32
SECRETS_ENC_KEY=your_32_byte_encryption_key_here

# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_min_32_characters_here

# Google OAuth (Get from Google Cloud Console)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_IOS_CLIENT_ID=your_ios_client_id.apps.googleusercontent.com
GOOGLE_ANDROID_CLIENT_ID=your_android_client_id.apps.googleusercontent.com
GOOGLE_WEB_CLIENT_ID=your_web_client_id.apps.googleusercontent.com

# GitHub OAuth (Get from GitHub Developer Settings)
EXPO_PUBLIC_GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# AI Model APIs
OPENROUTER_API_KEY=sk-or-v1-xxxxx
OPENAI_API_KEY=sk-xxxxx
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Deployment
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# Monitoring & Error Tracking
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Rate Limiting (Optional - Upstash Redis)
UPSTASH_REDIS_REST_URL=https://xxxxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxxxx

# Analytics (Optional)
POSTHOG_API_KEY=phc_xxxxx
POSTHOG_HOST=https://app.posthog.com
