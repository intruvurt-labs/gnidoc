
{
  "expo": {
    "name": "gnidoC-terceS",
    "slug": "gnidoc-terces",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "gnidoc",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "jsEngine": "hermes",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.rork.gnidoc",
      "usesIcloudStorage": true,
      "associatedDomains": ["applinks:gnidoc.xyz", "applinks:*.gnidoc.xyz"],
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow $(process.ENV.PRODUCT_NAME) to access your photos for document scanning and image uploads.",
        "NSCameraUsageDescription": "Allow $(process.ENV.PRODUCT_NAME) to access your camera for document scanning.",
        "NSMicrophoneUsageDescription": "Allow $(process.ENV.PRODUCT_NAME) to access your microphone for voice features.",
        "NSFaceIDUsageDescription": "Allow $(process.ENV.PRODUCT_NAME) to use Face ID for secure access.",
        "UIBackgroundModes": ["audio", "fetch", "processing"]
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "app.rork.gnidoc",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "gnidoc.xyz",
              "pathPrefix": "/"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#000000",
          "image": "./assets/images/splash.png",
          "resizeMode": "contain",
          "dark": {
            "backgroundColor": "#0b0f12",
            "image": "./assets/images/splash.png",
            "resizeMode": "contain"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to save downloaded images and scan documents."
        }
      ],
      [
        "expo-secure-store",
        {
          "faceIDPermission": "Allow $(process.ENV.PRODUCT_NAME) to use Face ID for secure access."
        }
      ]
    ]
  }
}